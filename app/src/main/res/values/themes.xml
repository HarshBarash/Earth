<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.Earth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_def</item>
        <item name="colorPrimaryVariant">@color/main_def</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_def</item>
        <item name="colorSecondaryVariant">@color/accent_def</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorSecondary</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:titleTextColor">@color/white</item>>

        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="iconTint">@color/white</item>

    </style>

    <!-- Bottom Navigation -->

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- Buttons -->

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Splash -->

    <style name="AppSplashTheme" parent="Theme.Earth">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:colorPrimary">@color/accent_def</item>
        <item name="colorPrimary">@color/accent_def</item>
        <item name="android:colorPrimaryDark">@color/accent_def</item>
        <item name="colorPrimaryDark">@color/accent_def</item>
        <item name="android:navigationBarColor">@color/accent_def</item>
        <item name="android:statusBarColor">@color/accent_def</item>
    </style>

