<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ivBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:tint="?attr/iconTint" />


    <TextView
        android:id="@+id/titletwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Information"
        android:textSize="@dimen/_24ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titletwo">

        <TextView
            android:id="@+id/TVTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Title:"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/etTutorialTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/white_btn"
            android:inputType="text"
            android:maxLength="50"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/TVMaterials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Materials:"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/etTutorialMaterials"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/white_btn"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/TVTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Time:"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTutorialTime"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:background="@drawable/white_btn"
                android:inputType="number"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="min"
                android:textSize="@dimen/_26ssp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints">

            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/nextbuttonfirst"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/white_btn"
            android:gravity="center|bottom"
            android:text="Continue"
            android:layout_margin="@dimen/_12sdp"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
